{
  "manifest_version": 2,
  "name": "Proxi",
  "version": "1.0",
  "permissions": ["proxy", "<all_urls>", "storage"],
  "browser_specific_settings": {
    "gecko": {
      "id": "dynamic-proxy@example.com",
      "strict_min_version": "91.1.0"
    }
  },
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Proxi"
  }
}
